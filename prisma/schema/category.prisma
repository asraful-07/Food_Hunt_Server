model Category {
  id          String @id @default(uuid())
  name        String @unique
  image       String?
  description String?
  isDeleted   Boolean @default(false)
  deletedAt   DateTime?
  meals       Meal[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([isDeleted], name: "idx_category_isDeleted")
  @@map("category")
}
